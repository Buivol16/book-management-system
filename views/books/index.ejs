<%- include('../partials/header') %>
    <form class="row g-3 mb-4" method="get" action="/">
        <div class="col-auto">
            <input type="text" class="form-control" name="title" placeholder="Title" value="<%= query.title || '' %>">
        </div>
        <div class="col-auto">
            <input type="text" class="form-control" name="author" placeholder="Author"
                value="<%= query.author || '' %>">
        </div>
        <div class="col-auto">
            <input type="text" class="form-control" name="genre" placeholder="Genre" value="<%= query.genre || '' %>">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">Filter</button>
            <a href="/" class="btn btn-outline-secondary">Reset</a>
            <a href="/books/new" class="btn btn-success">Add New Book</a>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (books.length===0) { %>
                <tr>
                    <td colspan="5" class="text-center">No books found.</td>
                </tr>
                <% } %>
                    <% books.forEach(book=> { %>
                        <tr>
                            <td>
                                <%= book.title %>
                            </td>
                            <td>
                                <%= book.author %>
                            </td>
                            <td>
                                <%= book.year %>
                            </td>
                            <td>
                                <%= book.genre %>
                            </td>
                            <td>
                                <a href="/books/<%= book._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                                <form action="/books/<%= book._id %>/delete" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Delete this book?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
        </tbody>
    </table>
    <%- include('../partials/footer') %>